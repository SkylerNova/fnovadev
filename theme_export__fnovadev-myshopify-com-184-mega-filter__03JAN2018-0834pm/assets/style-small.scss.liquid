  .collection-top label, .collection-top select {font-size: 12px;}
  
  #collection {margin-top: 0;}
  #collection .total-items {margin: 15px 0;}
  
  #collection-carousel .container {padding: 0;}

  .product-item {margin-top: 0; margin-bottom: 40px;}
  .product-item .quick-view-btn {display: none; height: 30px; top: 20%}
  .product-item .quick-view-btn div {top: 20px;}
  .product-item .notify-me{opacity: 1; filter: alpha(opacity=100); bottom: 0;height:auto;line-height: 1.2em;padding: 8px 0;}
  .product-item .notify-me span{top:5px; font-size:8px!important; letter-spacing: 1.5px; }
  .product-item .price .retail {margin: 0 7px;}
  .product-item .price .deal {margin: 0 7px;}
  .product-item .title {font-size: 9px; line-height: 15px;}
