/* #### Mobile Phones Portrait #### */

@media all and (max-width: 584px) {

  h2 {margin-bottom: 0;}
  
  /*
  /******************************** HEADER *****************************
  */

  .header-drop {display: none;}  

  #header.over-carousel {color: {{settings.header_text_color}} !important; position: fixed; border-bottom: 0; z-index: 10; box-shadow: 0 0 10px rgba(0,0,0,0.1); background: {{settings.header_color}} !important;}  
  #header {position: fixed; border-bottom: 0;top:0; z-index: 10; box-shadow: 0 0 10px rgba(0,0,0,0.1); background: #000 !important; color: #fff;}
  #header .header-wrapper {padding-top: 0; padding-bottom: 0; height: 55px;}
  #header .container {position: relative; padding: 0 12px;}
  #header .logo {margin: 0; float: left; height: 100%; text-align: center;}
  #header .logo img {display: block;}
  #header .utils {height: 100%;}
  #header .menu-mobile {margin-top: 0; height: 100%;}
  #header .menu-mobile .shop {font-size: 9px; display: block; position: relative; left: -3px; line-height: 10px;}
  #header .menu-mobile .search-target {position: relative; top: 4px;}
  #header .menu-mobile .search-target i {font-size: 18px;}
  #header .top-utils {text-align: right; font-size: {{settings.menu_font_size}}; font-weight: {{settings.menu_font_weight}}; margin-top: 0; }
  #header .top-utils .newsletter {display: none; }
  #header .top-utils ul {list-style-type: none;}
  #header .top-utils li {float: right; margin-left: 0; position: relative; top: 1px;}
  #header .top-utils li span {display: none;}
  #header .top-utils i {font-size: 18px;}
  #header .top-utils .bag {margin-top: -10px;}
  #header .top-utils .bag .handle {width: 10px; height: 10px; border: 1px solid #fff; border-radius: 100%; position: relative; top: 6px; left: -4px; z-index: -1; margin-left: auto; background-color: transparent !important;}
