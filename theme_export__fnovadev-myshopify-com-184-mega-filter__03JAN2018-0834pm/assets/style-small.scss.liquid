  #product-info .bf-countdown .flip-clock-divider.seconds .flip-clock-label{right:-53px;}
  
  
  /*
  /******************************** COLLECTION GRID *****************************
  */

  .collection-banner.container {padding: 0; margin-top: 0}
  .collection-title h1 {margin-top: 10px; margin-bottom: 15px;}
  
  .collection-top {margin-top: 15px;}
  .collection-top .container {max-width: 100%;}
  .collection-top .breadcrumb {float: none;}
  .collection-top .sort-select {float: none; text-align: right;} 
